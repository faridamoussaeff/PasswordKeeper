<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
  <div class="card card-body">
  <h1 class="text-center mb-3"><i class="fas fa-key"></i> Password Generator
  </h1>
  <body id="password-create">

    <div class="container">

      <h3 class="display_password" id="passwordDisplay">

      </h3>
      <form id="passwordGeneratorForm" class="form">
        <div class="website-info">
          <div class="website-url">
            <label for="url">Name Of Website</label>
            <input
              type="text"
              placeholder="Name"
              name="name"
              id="name"
              required
            />
          </div>
          <div class="website-category">
            <label for="categories">Category Of Website</label>
            <select name="categories" id="categories" class="categories">
              <option value="social">Social Media</option>
              <option   value="work">Work</option>
              <option value="entertainment">Entertainment</option>
            </select>
          </div>
        </div>
        <div class="password-length-requirements">
          <div class="password-characters">
            <label for="passwordLength" class="password-length"
              >Number of Characters</label
            >
            <div class="character-amount-container">
              <!-- <input
                type="range"
                min="1"
                max="50"
                value="10"
                id="passwordLengthRange"
              /> -->
              <input
                class="number-input"
                type="number"
                min="1"
                max="50"
                value="10"
                id="passwordLengthNumber"
              />
            </div>
          </div>
          <div class="password-requirements">
            <label for="addUppercase">
              <input type="checkbox" id="addUppercase" />
              add Uppercase
            </label>

            <label for="addNumbers">
              <input type="checkbox" id="addNumbers" />
              Add Numbers
            </label>

            <label for="addSymbols">
              <input type="checkbox" id="addSymbols" />
              Add Symbols
            </label>
          </div>
        </div>
        <button type="submit" class="btn btn-secondary" id="submit">
          Create
        </button>
      </form>
    </div>
  </body>

</html>
