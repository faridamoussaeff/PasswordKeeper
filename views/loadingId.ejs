<!DOCTYPE html>
<html lang="en">

<body>
 <style>
   body {
     background-color: #ECECEC;
  }
   p {
     font-size: 150%;
     border: 60px;
     padding: 60px;
  };
 </style>
  <main style="margin: 3em;">
    <%- include('partials/_header') %>
    <table class="table table-bordered">
      <thead>
        <tr style="width:100%">
          <h1>
          <th scope="col">Organization Name</th>
          <th scope="col">Username</th>
          <th scope="col">Password</th>
          <th scope="col">Category</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </h1>
        </tr>
      </thead>
      <tbody>
        <% for (let p in templateVar) { %>

          <tr>
            <td><%= templateVar[p].name %></td>
            <td><%= templateVar[p].organizations_email %></td>
            <td><%= templateVar[p].organizations_password %></td>
            <td><%= templateVar[p].category %></td>
            <td>
              <form method="GET" action="/edit/<%= templateVar[p].id %>">
                <button type="edit" name="edit" class="btn btn-outline-success">Edit</button>
              </form>
            </td>
              <td>
                <form method="POST" action="/register">
                  <button type="delete" name="delete" class="btn btn-outline-primary">Delete</button>
                </form>
              </td>
          </tr>
          <%}%>
      </tbody>
    </table>
    <form method="GET" action="/add" >
      <button type="input" name="add" class="btn btn-primary">ADD account</button>

    </form>

  </main>
  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
