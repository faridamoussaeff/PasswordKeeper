    <label for="email">email</label>
    <input type="text" id="email" name = 'email' value = '<%= organizations_email %>'  >

    <label for="password">password</label>
    <input type="text" id="password" name = 'password' value = '<%= organizations_password %>'>

    <label for= 'catergory'> category </label>
    <input type="text" id="password" name = 'category' value = '<%=category %>' >

      <button type="edit" name="edit" class="btn btn-outline-success">Generate New Account</button>
    </form>

</body>

</html>
